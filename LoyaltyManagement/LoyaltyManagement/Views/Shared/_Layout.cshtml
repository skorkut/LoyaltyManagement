    <div id="modalKampanya">
        <div>
            <h3 style="margin-top:-18px; margin-right:10px;">Kampanya Kodu</h3>
            <form>
                <p><input id="txtkampanyakodModal" class="textInput" type="text" placeholder="Kod Giriniz"></p>
                <p style="float:right;"><input type="submit" value="Uygula" onclick="KodKaydet()"></p>
            </form>
            <span class="close" onclick="closeModal()">&times;</span>
        </div>
    </div>
    <!-- end copyright -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- jquery -->
    <script src="~/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="~/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="~/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="~/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="~/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="~/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="~/js/sticker.js"></script>
    <!-- main js -->
    <script src="~/js/main.js"></script>

    <script>
        $(document).ready(function () {
            // Kod Okut bağlantısına tıklanınca modalı aç
            $("#kodOkutLink").on("click", function (e) {
                e.preventDefault();
                openModal();
            });
        });
        function openModal() {
            // Modalı aç
            $("#modalKampanya").fadeIn();

            // Kullanıcıdan alınan kodu modal içindeki input'a kopyala
            var kampanyaKodu = $("#txtkampanyakod").val();
            $("#txtkampanyakodModal").val(kampanyaKodu);
        }


        $(".close").click(function () {
            closeModal();
        });

        $(window).click(function (event) {
            if (event.target == $("#modalKampanya")[0]) {
                closeModal();
            }
        });

        function closeModal() {
            $("#modalKampanya").fadeOut(); // jQuery fadeIn/fadeOut kullanımı
        }

        function KodKaydet() {
            var kod = $("#txtkampanyakodModal").val();
            $.post("/Home/KampanyaKodKaydet", { "kod": kod },
                function (data) {
                    alert(data);
                });
        }
    </script>
    <style>
        #modalKampanya {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

            #modalKampanya div {
                background-color: #fff;
                width: 50%;
                padding: 30px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 1000;
                overflow: hidden; /* Yatay scroll çubuğunu engelle */
                position: relative; /* Relative olarak değiştirildi */
            }

            #modalKampanya h3 {
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }

            #modalKampanya form {
                margin-bottom: 20px;
            }

            #modalKampanya p {
                margin: 15px 0;
            }

            #modalKampanya input[type="text"] {
                width: calc(100% - 20px); /* 20 piksel iç kenar boşluğu bırak */
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            #modalKampanya input[type="button"] {
                background-color: #4CAF50;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                #modalKampanya input[type="button"]:hover {
                    background-color: #45a049;
                }

            #modalKampanya .close {
                color: #aaa;
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 28px;
                font-weight: bold;
                cursor: pointer;
            }

                #modalKampanya .close:hover,
                #modalKampanya .close:focus {
                    color: black;
                    text-decoration: none;
                }



    </style>
</body>
</html>
