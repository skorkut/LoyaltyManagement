                                <li><img src="~/img/isbirlikci1.png" alt="" style="width:100px;" ></li>
                                <li><img src="~/img/isbirlikci2.png" alt="" style="width:100px;"></li>
                                <li><img src="~/img/isbirlikci3.png" alt="" style="width:100px;"></li>
                              
                            </ul>
                            
                        </div>
                        <div class="footer-box get-in-touch" style="padding-top:80px;">
                         
                            <ul>
                              
                                <li><img src="~/img/isbirlikci4.png" alt="" style="width:100px;"></li>
                                <li><img src="~/img/isbirlikci5.png" alt="" style="width:100px;"></li>
                                <li><img src="~/img/isbirlikci6.png" alt="" style="width:100px;"></li>
                            </ul>

